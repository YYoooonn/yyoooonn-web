{
  "name": "mono",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "db:migrate:deploy": "turbo run db:migrate:deploy",
    "db:migrate:dev": "turbo run db:migrate:dev",
    "db:push": "turbo run db:push",
    "db:seed": "turbo run db:seed",
    "db:up": "docker-compose -f docker-compose.db.yml up -d",
    "db:ready": "sleep 5 && pnpm db:migrate:dev",
    "db:down": "docker-compose -f docker-compose.db.yml down",
    "env:sync": "chmod +x scripts/env-sync.sh && ./scripts/env-sync.sh",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "dev": "chmod +x scripts/dev-with-cleanup.sh && ./scripts/dev-with-cleanup.sh",
    "generate": "turbo run generate",
    "codegen": "turbo run codegen",
    "lint": "turbo run lint",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm format"
    ]
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "prettier": "^3.2.5",
    "turbo": "^2.3.3",
    "typescript": "5.5.4"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
