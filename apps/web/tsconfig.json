{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/": ["./src/"],
      "@/*": ["./src/*"],
      "@public/*": ["./public/*"]
    },
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.js",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
