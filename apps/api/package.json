    "@types/body-parser": "^1.19.5",
    "@types/express": "^5.0.0",
    "esbuild": "^0.25.1",
    "esbuild-register": "^3.6.0",
    "eslint": "^9.15.0",
    "nodemon": "^3.1.9",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
